.vitrine-box {
    display flex
    width 100%
    border #d6e5f2
    box-shadow 1px 1px 1px alpha(black, .2)
    border-radius 5px
    overflow hidden
    .vitrine-header {
        color #006a9c
        font-size 16px
        padding 10px
        background-image linear-gradient(#eff7fe 45%, #e5f1fb 55%)
        margin-bottom 10px
    }
    .reference {
        display flex
        flex-direction column
        border-right 1px solid alpha(black, .2)
    }
    .recommendation {
        display flex
        flex-direction column
        flex 1
        overflow hidden
        position relative

        a.prev {
            position absolute
            top 36px
            bottom 0
            left 0
            width 40px
            z-index 9
            
            background-image url('data:image/png;base64,'), linear-gradient(left, white 50%, transparent)
            background-position center 65px, center center
            background-repeat no-repeat, no-repeat

            &:hover {
                background-image url('data:image/png;base64,'), linear-gradient(left, white 50%, transparent)
            }        
        }

        a.next {
            position absolute
            top 36px
            bottom 0
            right 0
            width 40px
            z-index 9
            background-image url('data:image/png;base64,'), linear-gradient(right, white 50%, transparent)
            background-position center 65px, center center
            background-repeat no-repeat, no-repeat

            &:hover {
                background-image url('data:image/png;base64,'), linear-gradient(right, white 50%, transparent)
            }
        }
        
        .recommendation-list {
            position relative
            display flex
            left 0
            padding 0 40px
            transition 200ms
        }
    }
}

.vitrine-item-list {
    overflow-x auto
    display flex
    max-width 100%
}

.vitrine-item {
    display inline-block
    align-self stretch
    width 165px
    text-align center
    padding 5px 5px 10px
    transition all 300ms
    z-index 1
    position relative

    a { 
        text-decoration none
        color black
    }
    &:hover a { text-decoration: underline; }
    
    &:before {
        content ''
        z-index -1
        position absolute
        top 0
        left 0
        size(100%)
        background-image linear-gradient(top, #d7eaf9 0%, transparent 100%)
        opacity 0
        transition 200ms
    }
    
    &:hover:before { opacity: 1; }
    
    img { margin-bottom: 10px; border: 2px solid transparent; transition: 200ms; width: 155px; }
    &:hover img { border: 2px solid #bdd0e0; }
    
    p { margin-bottom: 0px; text-align: left; padding: 0 10px; }
    p.name {
        display -webkit-box;
        -webkit-line-clamp 3;
        -webkit-box-orient vertical;
        line-height 1.3; 
        max-height calc(1em * 3 * 1.3); // callback da ellipsis
        overflow hidden;
        text-overflow ellipsis;
        margin-bottom 10px
    }
    p.payment-conditions {
        color #cc0000
        font-weight bolder
        font-size 1em
        strong {
            font-size 1.1em
            line-height .9
            &:last-child:before {
                content 'R$'
            }
        }
    }
    p.price {
        color #cc0000
        strong {
            font-weight bolder
            font-size 1.3em
        }
    }
    
}